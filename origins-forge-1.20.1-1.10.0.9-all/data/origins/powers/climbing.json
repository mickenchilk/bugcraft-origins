{
  "type": "apoli:multiple",
  "climbing": {
    "type": "apoli:climbing",
    "condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apoli:power_active",
          "power": "origins:climbing_toggle"
        },
        {
          "type": "apoli:collided_horizontally"
        }
      ]
    },
    "hold_condition": {
      "type": "apoli:or",
      "conditions": [
        {
          "type": "apoli:block_collision",
          "block_condition": "apoli:allow",
          "offset_x": -0.01,
          "offset_z": -0.01
        },
        {
          "type": "apoli:block_collision",
          "block_condition": "apoli:allow",
          "offset_x": 0.01,
          "offset_z": 0.01
        }
      ]
    }
  },
  "toggle": {
    "type": "apoli:toggle",
    "retain_state": false
  }
}